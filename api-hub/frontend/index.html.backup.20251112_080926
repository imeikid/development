    <script src="utils/api.js"></script>
    <script>
        // API Configuration
        const API_BASE_URL = window.location.hostname === 'localhost' ? 
            'http://localhost:3002' : '/api-hub';

        // Initialize application
        document.addEventListener('DOMContentLoaded', function() {
            initSegmentControl();
            loadChannels();
            loadIncomingData();
            loadAnalytics();
        });

        // Segment Control
        function initSegmentControl() {
            const segmentButtons = document.querySelectorAll('.ios-segment-button');
            segmentButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tabName = this.getAttribute('data-tab');
                    
                    // Update active buttons
                    segmentButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show corresponding tab
                    document.querySelectorAll('.tab-content').forEach(tab => {
                        tab.classList.remove('active');
                    });
                    document.getElementById(tabName).classList.add('active');
                    
                    // Load tab-specific data
                    if (tabName === 'incoming') loadIncomingData();
                    if (tabName === 'analytics') loadAnalytics();
                });
            });
        }

        // Dark Mode Toggle
        function toggleDarkMode() {
            const app = document.querySelector('.ios-app');
            const currentTheme = app.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            app.setAttribute('data-theme', newTheme);
            
            const button = document.querySelector('.ios-controls .ios-button');
            button.textContent = newTheme === 'light' ? 'üåô' : '‚òÄÔ∏è';
        }

        // Load Channels for Distribution
        async function loadChannels() {
            try {
                const response = await fetch(`${API_BASE_URL}/api/channels`);
                const data = await response.json();
                
                const channelSelector = document.getElementById('channelSelector');
                const channelsList = document.getElementById('channelsList');
                
                channelSelector.innerHTML = '';
                channelsList.innerHTML = '';
                
                Object.entries(data.channels).forEach(([key, channel]) => {
                    // Channel selector for distribution
                    const checkbox = document.createElement('label');
                    checkbox.className = 'ios-checkbox';
                    checkbox.innerHTML = `
                        <input type="checkbox" value="${key}" ${channel.enabled ? 'checked' : ''}>
                        <span>${channel.icon} ${channel.name}</span>
                    `;
                    channelSelector.appendChild(checkbox);
                    
                    // Channel management
                    const channelItem = document.createElement('div');
                    channelItem.className = 'channel-item';
                    channelItem.style.cssText = 'padding: 12px; border-bottom: 1px solid var(--ios-border);';
                    channelItem.innerHTML = `
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong>${channel.icon} ${channel.name}</strong>
                                <div style="font-size: 12px; color: var(--ios-text-secondary);">
                                    ${channel.enabled ? 'üü¢ –ê–∫—Ç–∏–≤–µ–Ω' : 'üî¥ –í—ã–∫–ª—é—á–µ–Ω'}
                                </div>
                            </div>
                            <button class="ios-button" onclick="toggleChannel('${key}')">
                                ${channel.enabled ? '–í—ã–∫–ª—é—á–∏—Ç—å' : '–í–∫–ª—é—á–∏—Ç—å'}
                            </button>
                        </div>
                    `;
                    channelsList.appendChild(channelItem);
                });
                
            } catch (error) {
                console.error('Error loading channels:', error);
                showAlert('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞–Ω–∞–ª–æ–≤');
            }
        }

        // Distribute Message
        async function distributeMessage() {
            const message = document.getElementById('messageInput').value.trim();
            const selectedChannels = Array.from(
                document.querySelectorAll('#channelSelector input:checked')
            ).map(input => input.value);
            
            if (!message) {
                showAlert('–í–≤–µ–¥–∏—Ç–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏');
                return;
            }
            
            if (selectedChannels.length === 0) {
                showAlert('–í—ã–±–µ—Ä–∏—Ç–µ —Ö–æ—Ç—è –±—ã –æ–¥–∏–Ω –∫–∞–Ω–∞–ª');
                return;
            }
            
            const button = document.querySelector('#distribution .ios-button.primary');
            const originalText = button.textContent;
            button.innerHTML = '<div class="ios-loading"></div> –û—Ç–ø—Ä–∞–≤–∫–∞...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${API_BASE_URL}/api/distribute`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        message,
                        channels: selectedChannels,
                        settings: {}
                    })
                });
                
                const result = await response.json();
                
                // Show results
                document.getElementById('resultsCard').style.display = 'block';
                const resultsDiv = document.getElementById('distributionResults');
                
                resultsDiv.innerHTML = result.results.map(r => `
                    <div class="data-item">
                        <div style="display: flex; justify-content: space-between;">
                            <span><strong>${getChannelName(r.channel)}</strong></span>
                            <span class="status-${r.status}">
                                ${r.status === 'success' ? '‚úÖ' : '‚ùå'}
                            </span>
                        </div>
                        <div style="font-size: 12px; color: var(--ios-text-secondary);">
                            ${r.result?.message || r.error || '–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ'}
                        </div>
                    </div>
                `).join('');
                
                showAlert(`–°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤ ${result.results.filter(r => r.status === 'success').length} –∫–∞–Ω–∞–ª–æ–≤`);
                
            } catch (error) {
                console.error('Distribution error:', error);
                showAlert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ —Å–æ–æ–±—â–µ–Ω–∏—è');
            } finally {
                button.textContent = originalText;
                button.disabled = false;
            }
        }

        // Load Incoming Data
        async function loadIncomingData() {
            try {
                const response = await fetch(`${API_BASE_URL}/api/data?limit=20`);
                const data = await response.json();
                
                const dataList = document.getElementById('incomingDataList');
                
                if (data.data.length === 0) {
                    dataList.innerHTML = '<div class="data-item">–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö</div>';
                    return;
                }
                
                dataList.innerHTML = data.data.map(item => `
                    <div class="data-item">
                        <div class="data-source">${item.source} ‚Ä¢ ${item.type}</div>
                        <div style="font-size: 14px; margin: 4px 0;">
                            ${JSON.stringify(item.data).substring(0, 100)}...
                        </div>
                        <div class="data-timestamp">${new Date(item.timestamp).toLocaleString()}</div>
                    </div>
                `).join('');
                
            } catch (error) {
                console.error('Error loading data:', error);
                document.getElementById('incomingDataList').innerHTML = 
                    '<div class="data-item">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö</div>';
            }
        }

        // Load Analytics
        async function loadAnalytics() {
            try {
                const response = await fetch(`${API_BASE_URL}/api/stats`);
                const stats = await response.json();
                
                const analyticsDiv = document.getElementById('analyticsContent');
                
                analyticsDiv.innerHTML = `
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                        <div style="text-align: center; padding: 16px; background: var(--ios-bg); border-radius: 10px;">
                            <div style="font-size: 24px; font-weight: bold;">${stats.totalMessages}</div>
                            <div style="font-size: 12px; color: var(--ios-text-secondary);">–í—Å–µ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏–π</div>
                        </div>
                        <div style="text-align: center; padding: 16px; background: var(--ios-bg); border-radius: 10px;">
                            <div style="font-size: 24px; font-weight: bold;">${stats.totalDataPoints}</div>
                            <div style="font-size: 12px; color: var(--ios-text-secondary);">–í—Ö–æ–¥—è—â–∏—Ö –¥–∞–Ω–Ω—ã—Ö</div>
                        </div>
                    </div>
                    <div style="margin-top: 16px;">
                        <h4 style="margin-bottom: 12px;">–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ –∫–∞–Ω–∞–ª–∞–º:</h4>
                        ${Object.entries(stats.channels).map(([key, channel]) => `
                            <div style="display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid var(--ios-border);">
                                <span>${getChannelName(key)}</span>
                                <span>${channel.sent} –æ—Ç–ø—Ä–∞–≤–æ–∫</span>
                            </div>
                        `).join('')}
                    </div>
                `;
                
            } catch (error) {
                console.error('Error loading analytics:', error);
                document.getElementById('analyticsContent').innerHTML = 
                    '<div class="data-item">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏</div>';
            }
        }

        // Helper functions
        function getChannelName(key) {
            const names = {
                telegram: 'üì± Telegram',
                vk: 'üë• VKontakte',
                email: 'üìß Email',
                whatsapp: 'üí¨ WhatsApp',
                sms: 'üì≤ SMS'
            };
            return names[key] || key;
        }

        function showAlert(message) {
            // Simple alert - you can replace with a proper iOS-style alert
            alert(message);
        }

        async function toggleChannel(channelId) {
            try {
                const response = await fetch(`${API_BASE_URL}/api/channels/${channelId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ enabled: !document.querySelector(`input[value="${channelId}"]`).checked })
                });
                
                if (response.ok) {
                    loadChannels();
                    showAlert('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∫–∞–Ω–∞–ª–∞ –æ–±–Ω–æ–≤–ª–µ–Ω—ã');
                }
            } catch (error) {
                console.error('Error toggling channel:', error);
                showAlert('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∫–∞–Ω–∞–ª–∞');
            }
        }
    </script>
</body>
</html>
